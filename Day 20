#include <stdio.h>
#include <stdlib.h>

int minButtonPresses(int X, int Y) {
    return abs(X - Y);
}

int main() {
    int T;
    scanf("%d", &T);

    while (T--) {
        int X, Y;
        scanf("%d %d", &X, &Y);

        int result = minButtonPresses(X, Y);
        printf("%d\n", result);
    }

    return 0;
}
