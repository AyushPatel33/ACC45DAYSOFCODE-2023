#include <stdio.h>

int main() {
    int T; // Number of test cases
    scanf("%d", &T);
    
    while (T--) {
        int X, Y; // Initial positions of policeman and thief
        scanf("%d %d", &X, &Y);
        
        // Calculate the minimum time using the formula (Y - X) / (2 - 1)
        int minTime = (Y - X);
        printf("%d\n", minTime);
    }
    
    return 0;
}
