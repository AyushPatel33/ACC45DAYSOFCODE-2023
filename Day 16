#include <stdio.h>

int main() {
    int t;
    scanf("%d", &t); // Number of test cases

    while (t--) {
        int n, m;
        scanf("%d %d", &n, &m); // Number of candies and friends

        // Check if it's possible to distribute candies as per conditions
        if (n % m == 0 && n % 2 == 0)
            printf("Yes\n");
        else
            printf("No\n");
    }

    return 0;
}
